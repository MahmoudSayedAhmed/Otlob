<p id="notice"><%= notice %></p>

<h1>Orders</h1>
      <% if @userOrders.size != 0 %>

<table class="table table-striped table-responsive w-auto">
  <thead>
    <tr>
      <th scope="col">Type</th>
      <th scope="col">Place</th>
      <th scope="col">Invited</th>
      <th scope="col">Joiend</th>
      <th scope="col">Status</th>
      <th scope="col">Actions</th>
    </tr>
  </thead>

  <tbody>
    <% @userOrders.each do |order| %>
 
            <tr>
              <% if order.orderType == false  %>
                <th scope="row"> BreakFast  </td>
              <% else %>
                <th scope="row"> Lunch </td>
              <% end %>
              <td><%= order.place %></td>
              <td>10</td>
              <td>5</td>
              <% if order.status %>
              <td> Finished </td>
              <td><%= link_to 'view', order %></td>
              <% else %>
              <td>waiting</td>
              <td text-left table-actions>
                <%= link_to 'view', order %>
                <a class="table-action hover-primary" id="<%= order.id %>" onclick="finish(this)">
                  <i class="ti-pencil"> </i>
                <a>
                <td class="finishLink" onclick="destroy(this)">cancel</td>
              </td>
              <% end %>
            </tr>
      <% end %>
  </tbody>
</table>
          <% else %>
       <p>you have no orders</p>
              <% end %>
<br>

<%= link_to 'Start New Order', new_order_path %>
