<!DOCTYPE html>
<html>
  <head>
    <title>Otlob</title>
    <%= csrf_meta_tags %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css">
    <%= javascript_include_tag 'application'%>
  </head>

  <body class="body" >

     <nav class="navbar navbar-dark bg-dark" id="topNav">

      <div class="container">
 
        <div id="navbarResponsive">
      <ul class="nav navbar-nav navbar-left" style="padding: 20px;">
            <li>
              <%= image_tag("otlop.png", class: "img-responsive image", id: "navbar-logo") %>

            </li>
            <li class="nav-item active">
              <%= link_to 'Home |' , home_index_url , :class => "nav-link navfont" %>
            </li>
            <li class="nav-item">
              <%= link_to 'Friends |' , friendships_url , :class => "nav-link navfont" %>
            </li>
            <li class="nav-item">
              <%= link_to 'Groups |' , groups_url , :class => "nav-link navfont" %>
            </li>
            <li class="nav-item">
              <%= link_to 'Orders |' , new_order_url , :class => "nav-link navfont" %>
            </li>
          </ul>
        </div>
      </div>
    </nav>


    <p class="notice"><%= notice %></p>
    <p class="alert"><%= alert %></p>
    <% if user_signed_in? %>
      <li><%= link_to 'Logout', destroy_user_session_path, method: :delete  %></li>
    <% else %>
    <p>You are not signed in</p>
      <li><%= link_to 'Login', new_user_session_path  %>  </li>
    <% end %>
    <%= yield %>
    <%= javascript_include_tag 'JSGroups'%>
  </body>
</html>
